#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/input_transform.h>
#include <dt-bindings/input/input-event-codes.h>
#include <dt-bindings/zmk/bt.h>
#include <input/processors.dtsi>
#include <physical_layouts.dtsi>

&uicr {
    nfct-pins-as-gpios;
};

/ {
    chosen {
        zmk,physical-layout = &default_layout;
    };

//trackball settings  
split_inputs {
      #address-cells = <1>;
      #size-cells = <0>;

      trackball_split_L: trackball_split_L@0 {
        compatible = "zmk,input-split";
        reg = <0>;
      };
    };

    trackball_listener_L: trackball_listener_L {
      compatible = "zmk,input-listener";
      status = "disabled";
      device = <&trackball_split_L>;
        input-processors =
            <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP | INPUT_TRANSFORM_X_INVERT | INPUT_TRANSFORM_Y_INVERT)>,
            <&zip_xy_scaler 1 20>,
            <&zip_scroll_scaler 1 8>,
            <&zip_xy_to_scroll_mapper>;
    };

    trackball_listener_R: trackball_listener_R {
      compatible = "zmk,input-listener";
      status = "disabled";
        input-processors =
            <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP | INPUT_TRANSFORM_Y_INVERT)>,
            <&zip_xy_scaler 1 12>,
            <&zip_smoothing 2>;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
        wakeup-source;

        row-gpios
            = <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <11>;
        rows = <4>;               
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)                                    RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)                                    RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)                                    RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10)
            RC(3,0) RC(3,1)                 RC(3,2) RC(3,3) RC(3,4)    RC(3,6) RC(3,7) RC(3,8)                 RC(3,9) RC(3,10)
        >;
    };

    default_layout: default_layout {
        compatible = "zmk,physical-layout";
        display-name = "Default";

        kscan = <&kscan0>;
        transform = <&default_transform>;

        keys  //                     w   h    x    y     rot    rx    ry
            = <&key_physical_attrs 100 100    0  100       0     0     0>
            , <&key_physical_attrs 100 100  100   40       0     0     0>
            , <&key_physical_attrs 100 100  200    0       0     0     0>
            , <&key_physical_attrs 100 100  300   45       0     0     0>
            , <&key_physical_attrs 100 100  400   45       0     0     0>
            , <&key_physical_attrs 100 100 1125   45       0     0     0>
            , <&key_physical_attrs 100 100 1225   45       0     0     0>
            , <&key_physical_attrs 100 100 1325    0       0     0     0>
            , <&key_physical_attrs 100 100 1425   40       0     0     0>
            , <&key_physical_attrs 100 100 1525  100       0     0     0>
            , <&key_physical_attrs 100 100    0  200       0     0     0>
            , <&key_physical_attrs 100 100  100  140       0     0     0>
            , <&key_physical_attrs 100 100  200  100       0     0     0>
            , <&key_physical_attrs 100 100  300  145       0     0     0>
            , <&key_physical_attrs 100 100  400  145       0     0     0>
            , <&key_physical_attrs 100 100 1125  145       0     0     0>
            , <&key_physical_attrs 100 100 1225  145       0     0     0>
            , <&key_physical_attrs 100 100 1325  100       0     0     0>
            , <&key_physical_attrs 100 100 1425  140       0     0     0>
            , <&key_physical_attrs 100 100 1525  200       0     0     0>
            , <&key_physical_attrs 100 100    0  300       0     0     0>
            , <&key_physical_attrs 100 100  100  240       0     0     0>
            , <&key_physical_attrs 100 100  200  200       0     0     0>
            , <&key_physical_attrs 100 100  300  245       0     0     0>
            , <&key_physical_attrs 100 100  400  245       0     0     0>
            , <&key_physical_attrs 100 100 1125  245       0     0     0>
            , <&key_physical_attrs 100 100 1225  245       0     0     0>
            , <&key_physical_attrs 100 100 1325  200       0     0     0>
            , <&key_physical_attrs 100 100 1425  240       0     0     0>
            , <&key_physical_attrs 100 100 1525  300       0     0     0>
            , <&key_physical_attrs 100 100    0  400       0     0     0>
            , <&key_physical_attrs 100 100  100  340       0     0     0>
            , <&key_physical_attrs 100 100  400  345       0     0     0>
            , <&key_physical_attrs 100 100  550  335    1500   500   345>
            , <&key_physical_attrs 100 100  710  335    3000   600   345>
            , <&key_physical_attrs 100 100  815  335 (-3000)  1025   345>
            , <&key_physical_attrs 100 100  975  335 (-1500)  1125   345>
            , <&key_physical_attrs 100 100 1125  345       0     0     0>
            , <&key_physical_attrs 100 100 1425  340       0     0     0>
            , <&key_physical_attrs 100 100 1525  400       0     0     0>
            ;
    };
};